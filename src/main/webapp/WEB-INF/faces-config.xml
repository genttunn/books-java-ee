<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
 <managed-bean>
  <managed-bean-name>testBean</managed-bean-name>
  <managed-bean-class>ch.hevs.managedbeans.TestBean</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
 </managed-bean>
 <navigation-rule>
  <from-view-id>/menuPage.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>listBooks</from-outcome>
   <to-view-id>/listBooks.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>listWriters</from-outcome>
   <to-view-id>/listWriters.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>listBorrowings</from-outcome>
   <to-view-id>/listBorrowings.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/listWriters.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>addWriterForm</from-outcome>
   <to-view-id>/addWriterForm.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/addWriterForm.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>#{testBean.performAddWriter}</from-outcome>
   <to-view-id>/listWriters.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/listBorrowings.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>addBorrowingForm</from-outcome>
   <to-view-id>/addBorrowingForm.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/addBorrowingForm.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>#{testBean.performAddBorrowing}</from-outcome>
   <to-view-id>/listBorrowings.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <application/>
</faces-config>
